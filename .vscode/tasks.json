// Available variables which can be used inside of strings.
// ${workspaceRoot}: the root folder of the team
// ${file}: the current opened file
// ${fileBasename}: the current opened file's basename
// ${fileDirname}: the current opened file's dirname
// ${fileExtname}: the current opened file's extension
// ${cwd}: the current working directory of the spawned process
{
    "version": "2.0.0",
    "command": "go",
    "echoCommand": true,
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "build"
            ],
            "problemMatcher": {
                "owner": "go",
                "fileLocation": [
                    "relative",
                    "${cwd}"
                ],
                "pattern": {
                    "regexp": "^(.+)\\:(\\d+)\\:(.+)$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                }
            },
            "group": {
                "_id": "build",
                "isDefault": false
            }
        },
        {
            "label": "tool",
            "type": "shell",
            "command": "go",
            "args": [
                "tool",
                "vet",
                "-all",
                "."
            ],
            "problemMatcher": {
                "owner": "go",
                "fileLocation": [
                    "relative",
                    "${cwd}"
                ],
                "pattern": {
                    "regexp": "^(.+)\\:(\\d+)\\:(.+)$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                }
            }
        }
    ]
}
